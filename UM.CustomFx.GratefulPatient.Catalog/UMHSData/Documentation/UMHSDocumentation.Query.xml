    <AddToParentView Field="CONSTITUENTID" ParentView="V_QUERY_FACULTY" ParentViewRelatedField="ID" PathAlias="Notes" DisplayAliasResourceKey="$$notes" />-->
  </RelationshipOperations>

</QueryViewSpec>

